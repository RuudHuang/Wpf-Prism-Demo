<Window x:Class="WpfPracticeDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:constants="clr-namespace:WpfPracticeDemo.Constants"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:helpers="clr-namespace:WpfPracticeDemo.Helpers"
        xmlns:local="clr-namespace:WpfPracticeDemo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:WpfPracticeDemo.Models"
        xmlns:prism="http://prismlibrary.com/"
        Name="TestName"
        Title="MainWindow"
        Width="800"
        Height="450"
        WindowState="Maximized"
        mc:Ignorable="d">
    <helpers:EventToCommandHelpercs.EventTrigger>
        <models:DemoEventTrigger EventName="Loaded"
                                 TargetCommand="{Binding NavigateToDefaultViewCommand}" />
    </helpers:EventToCommandHelpercs.EventTrigger>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ContentControl Grid.ColumnSpan="2"
                        prism:RegionManager.RegionName="{x:Static constants:DemoConstants.MenuRegionName}" />

        <ContentControl Grid.Row="1"
                        prism:RegionManager.RegionName="{x:Static constants:DemoConstants.OperationRegionName}" />

        <ContentControl Grid.Row="1"
                        Grid.Column="1"
                        prism:RegionManager.RegionName="{x:Static constants:DemoConstants.ContentRegionName}" />
    </Grid>
</Window>
