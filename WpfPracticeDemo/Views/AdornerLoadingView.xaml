<UserControl x:Class="WpfPracticeDemo.Views.AdornerLoadingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfPracticeDemo.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type Ellipse}">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="Fill" Value="LightGray" />
            <Setter Property="Canvas.Left" Value="30" />
            <Setter Property="RenderTransformOrigin" Value="0.5,2" />
        </Style>

        <PowerEase x:Key="EllipsePowerEase"
                   EasingMode="EaseInOut"
                   Power="3" />

    </UserControl.Resources>

    <Grid Background="Black"
          Opacity="0.6">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="80" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Canvas Grid.Row="1"
                Grid.Column="1">
            <Canvas.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <BeginStoryboard.Storyboard>
                            <Storyboard RepeatBehavior="Forever"
                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)">
                                <DoubleAnimation AccelerationRatio="0.1"
                                                 DecelerationRatio="0.9"
                                                 EasingFunction="{StaticResource EllipsePowerEase}"
                                                 Storyboard.TargetName="Ellipse1"
                                                 To="360"
                                                 Duration="0:0:2" />
                                <DoubleAnimation AccelerationRatio="0.4"
                                                 DecelerationRatio="0.6"
                                                 EasingFunction="{StaticResource EllipsePowerEase}"
                                                 Storyboard.TargetName="Ellipse2"
                                                 To="360"
                                                 Duration="0:0:2" />
                                <DoubleAnimation AccelerationRatio="0.7"
                                                 DecelerationRatio="0.3"
                                                 EasingFunction="{StaticResource EllipsePowerEase}"
                                                 Storyboard.TargetName="Ellipse3"
                                                 To="360"
                                                 Duration="0:0:2" />
                            </Storyboard>
                        </BeginStoryboard.Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Canvas.Triggers>
            <Ellipse Name="Ellipse1"
                     Fill="Red">
                <Ellipse.RenderTransform>
                    <RotateTransform />
                </Ellipse.RenderTransform>
            </Ellipse>
            <Ellipse Name="Ellipse2"
                     Fill="Green">
                <Ellipse.RenderTransform>
                    <RotateTransform />
                </Ellipse.RenderTransform>
            </Ellipse>
            <Ellipse Name="Ellipse3"
                     Fill="Blue">
                <Ellipse.RenderTransform>
                    <RotateTransform />
                </Ellipse.RenderTransform>
            </Ellipse>
        </Canvas>
    </Grid>
</UserControl>
