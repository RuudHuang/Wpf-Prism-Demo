<UserControl x:Class="WpfPracticeDemo.Views.UcOperationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfPracticeDemo.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:WpfPracticeDemo.Models"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:viewModels="clr-namespace:WpfPracticeDemo.ViewModels"
             xmlns:helpers="clr-namespace:WpfPracticeDemo.Helpers"
             d:DataContext="{d:DesignData viewModels:OperationViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <helpers:EventToCommandHelpercs.EventTrigger>
        <models:DemoEventTrigger EventName="Loaded"
                                 TargetCommand="{Binding LoadedCommand}" />
    </helpers:EventToCommandHelpercs.EventTrigger>
    <ListBox Name="ShapeMenus"
             ItemsSource="{Binding ShapeMenus}">
        <ListBox.ItemContainerStyle>
            <Style TargetType="{x:Type ListBoxItem}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                            <Expander Header="{Binding ShapeMenuName}"
                                      IsExpanded="{Binding IsExpanded}">
                                <ListBox ItemsSource="{Binding Shapes}"
                                         SelectedItem="{Binding ElementName=ShapeMenus, Path=DataContext.SelectedShape}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:ShapeBase}">
                                            <TextBlock Text="{Binding Name}" />
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Expander>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ListBox.ItemContainerStyle>
    </ListBox>
</UserControl>
